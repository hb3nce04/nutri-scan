{
  "name": "nutri-scan",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "start:dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:backend": "npm --workspace=backend run dev",
    "dev:frontend": "npm --workspace=frontend start",
    "build": "npm --workspace=frontend run build && npm --workspace=backend run build",
    "start": "npm --workspace=backend run start"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
